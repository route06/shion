{
  "name": "shion",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun wrangler pages dev --local -- vite dev",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "db:migration:create": "drizzle-kit generate:sqlite --schema=./db/schema/index.ts --out=./migrations",
    "db:migration:apply:dev": "bun wrangler d1 migrations apply shion_dev --local",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-cloudflare-access": "^1.0.3",
    "@heroicons/react": "^2.0.18",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-popover": "^1.0.7",
    "ai": "^2.2.28",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.1",
    "drizzle-valibot": "^0.1.1",
    "framer-motion": "^10.16.16",
    "marked": "^11.0.1",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "sonner": "^1.2.4",
    "swr": "^2.2.4",
    "ts-pattern": "^5.0.6",
    "valibot": "^0.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@cloudflare/workers-types": "^4.20231121.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.2",
    "wrangler": "^3.19.0",
    "husky": "^8.0.0"
  }
}
